    "bin": [
        "git-deploy"
    ],
    "autoload": {
        "psr-4": {
            "Brunodebarros\\Gitdeploy\\": "tools/src/"
        }
    },
    "require-dev": {
        "phpseclib/phpseclib": "^2.0",
        "league/climate": "^3.2",
        "league/flysystem": "^1.0",
        "phpunit/phpunit": "^5.1"
    },
    "config": {
        "vendor-dir": "tools/vendor",
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": false
    },
    "scripts": {
        "post-autoload-dump": [
            "php tools/build.php"
        ]
    }
}
